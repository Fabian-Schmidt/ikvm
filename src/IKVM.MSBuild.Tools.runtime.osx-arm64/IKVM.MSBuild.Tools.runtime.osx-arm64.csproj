<Project Sdk="Microsoft.Build.NoTargets">
    <PropertyGroup>
        <TargetFrameworks>net472;net6.0;net8.0</TargetFrameworks>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>IKVM MSBuild Tools</Description>
        <IncludeSymbols>false</IncludeSymbols>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.md" Pack="true" PackagePath="." />
        <None Include="..\..\README.md" Pack="true" PackagePath="." />
        <None Include="buildTransitive\**\*" Pack="true" PackagePath="buildTransitive\%(RecursiveDir)%(Filename)%(Extension)" />
        <None Include="lib\**\*" Pack="true" PackagePath="lib\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <PublishProjectReference Include="..\ikvmimp\ikvmimp.csproj">
            <SetTargetFramework>TargetFramework=net8.0</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=osx-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' != '' ">ikvmimp\net8.0\osx-arm64</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' != '' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmimp\net8.0\osx-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmexp\ikvmexp.csproj">
            <SetTargetFramework>TargetFramework=net8.0</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=osx-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' != '' ">ikvmexp\net8.0\osx-arm64</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' != '' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmexp\net8.0\osx-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
    </ItemGroup>

</Project>
