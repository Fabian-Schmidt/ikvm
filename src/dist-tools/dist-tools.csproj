<Project Sdk="Microsoft.Build.NoTargets">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <ErrorOnDuplicatePublishOutputFiles>false</ErrorOnDuplicatePublishOutputFiles>
    </PropertyGroup>

    <ItemGroup>
        <ToolTarget Include="net461|win7-x64" TargetFramework="net461" RuntimeIdentifier="win7-x64" Condition="$(EnabledToolRuntimes.Contains(';win7-x64;'))" />
        <ToolTarget Include="net461|win7-x86" TargetFramework="net461" RuntimeIdentifier="win7-x86" Condition="$(EnabledToolRuntimes.Contains(';win7-x86;'))" />
        <ToolTarget Include="net461|win81-arm" TargetFramework="net461" RuntimeIdentifier="win81-arm" Condition="$(EnabledToolRuntimes.Contains(';win81-arm;'))" />
        <ToolTarget Include="net461|linux-x64" TargetFramework="net461" RuntimeIdentifier="linux-x64" Condition="$(EnabledToolRuntimes.Contains(';linux-x64;'))" />
        <ToolTarget Include="net461|linux-arm" TargetFramework="net461" RuntimeIdentifier="linux-arm" Condition="$(EnabledToolRuntimes.Contains(';linux-arm;'))" />
        <ToolTarget Include="net461|linux-musl-x64" TargetFramework="net461" RuntimeIdentifier="linux-musl-x64" Condition="$(EnabledToolRuntimes.Contains(';linux-musl-x64;'))" />
        <ToolTarget Include="net461|linux-musl-arm" TargetFramework="net461" RuntimeIdentifier="linux-musl-arm" Condition="$(EnabledToolRuntimes.Contains(';linux-musl-arm;'))" />
        <ToolTarget Include="net461|osx-x64" TargetFramework="net461" RuntimeIdentifier="osx-x64" Condition="$(EnabledToolRuntimes.Contains(';osx-x64;'))" />
        <ToolTarget Include="netcoreapp3.1|win7-x64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="win7-x64" Condition="$(EnabledToolRuntimes.Contains(';win7-x64;'))" />
        <ToolTarget Include="netcoreapp3.1|win7-x86" TargetFramework="netcoreapp3.1" RuntimeIdentifier="win7-x86" Condition="$(EnabledToolRuntimes.Contains(';win7-x86;'))" />
        <ToolTarget Include="netcoreapp3.1|win81-arm" TargetFramework="netcoreapp3.1" RuntimeIdentifier="win81-arm" Condition="$(EnabledToolRuntimes.Contains(';win81-arm;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-x64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-x64" Condition="$(EnabledToolRuntimes.Contains(';linux-x64;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-arm" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-arm" Condition="$(EnabledToolRuntimes.Contains(';linux-arm;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-arm64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-arm64" Condition="$(EnabledToolRuntimes.Contains(';linux-arm64;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-musl-x64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-musl-x64" Condition="$(EnabledToolRuntimes.Contains(';linux-musl-x64;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-musl-arm" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-musl-arm" Condition="$(EnabledToolRuntimes.Contains(';linux-musl-arm;'))" />
        <ToolTarget Include="netcoreapp3.1|linux-musl-arm64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="linux-musl-arm64" Condition="$(EnabledToolRuntimes.Contains(';linux-musl-arm64;'))" />
        <ToolTarget Include="netcoreapp3.1|osx-x64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="osx-x64" Condition="$(EnabledToolRuntimes.Contains(';osx-x64;'))" />
        <ToolTarget Include="netcoreapp3.1|osx-arm64" TargetFramework="netcoreapp3.1" RuntimeIdentifier="osx-arm64" Condition="$(EnabledToolRuntimes.Contains(';osx-arm64;'))" />
    </ItemGroup>

    <!-- Runs once per TFM/RID combination to generate individual output. -->
    <Target Name="GetCopyToOutputDirectoryItemsByToolTarget" BeforeTargets="BeforeBuild" Inputs="@(ToolTarget)" Outputs="%(Identity)\null">

        <!-- batch values to properties -->
        <PropertyGroup>
            <_TargetFramework>%(ToolTarget.TargetFramework)</_TargetFramework>
            <_RuntimeIdentifier>%(ToolTarget.RuntimeIdentifier)</_RuntimeIdentifier>
        </PropertyGroup>

        <!-- output for the TFM/RID -->
        <ItemGroup>
            <PublishProjectReference Include="..\ikvmc\ikvmc.csproj">
                <SetTargetFramework>TargetFramework=$(_TargetFramework)</SetTargetFramework>
                <SetRuntimeIdentifier>RuntimeIdentifier=$(_RuntimeIdentifier)</SetRuntimeIdentifier>
                <ProjectTargetPath>$(_TargetFramework)\$(_RuntimeIdentifier)</ProjectTargetPath>
            </PublishProjectReference>
            <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj">
                <SetTargetFramework>TargetFramework=$(_TargetFramework)</SetTargetFramework>
                <SetRuntimeIdentifier>RuntimeIdentifier=$(_RuntimeIdentifier)</SetRuntimeIdentifier>
                <ProjectTargetPath>$(_TargetFramework)\$(_RuntimeIdentifier)</ProjectTargetPath>
            </PublishProjectReference>
        </ItemGroup>
    </Target>

</Project>
